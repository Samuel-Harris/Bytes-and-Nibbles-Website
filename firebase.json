{
  "hosting": {
    "public": "apps/website/out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanUrls": true
  },
  "storage": {
    "rules": "storage.rules"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "apps/website/firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5050
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 5070
    },
    "singleProjectMode": false
  }
}
